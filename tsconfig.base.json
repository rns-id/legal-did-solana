{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
